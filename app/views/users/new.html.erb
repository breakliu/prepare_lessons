<script type="text/javascript" charset="utf-8">
$('.signup').addClass('active');
</script>
<%= simple_form_for @user, html: { class: "form-horizontal" } do |f| %>
  <fieldset>
	<legend>注 册</legend>
	<%= f.input :username %>
	<%= f.input :password %>
	<%= f.input :password_confirmation %>
	<%= f.button :submit, class: 'btn-primary' %>
  </fieldset>  
<% end %>