<%= simple_form_for(@group_study_plan, :html => { :class => 'form-horizontal' } ) do |f| %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.association :group, include_blank: false %>
    <%= f.association :term, include_blank: false %>
    <%= f.input :content, as: :kindeditor, input_html: { height: '500' } %>
  </div>

  <div class="form-actions">
  <%= f.button :submit, :class => "btn btn-primary" %>
  <%= link_to '取 消', group_study_plans_path, :class => "btn" %>
  </div>
<% end %>
