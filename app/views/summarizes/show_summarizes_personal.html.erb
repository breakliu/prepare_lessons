<ul class="pager">
  <li class="previous"><%= link_to %(&larr; 上一篇: #{@prev.title}).html_safe, show_summarizes_personal_path(@prev) if @prev %></li>
  <li class="next"><%= link_to %(下一篇: #{@next.title} &rarr;).html_safe, show_summarizes_personal_path(@next) if @next %></li>
</ul>

<p>
  <b>标题:</b>
  <%= @summarize.title %>
</p>

<p>
  <b>作者:</b>
  <%= @summarize.user.username %>
</p>

<p>
  <b>科目:</b>
  <%= @summarize.course %>
</p>

<p>
  <b>学期:</b>
  <%= @summarize.term.name %>
</p>

<p>
  <b>内容:</b><br/>
  <%= @summarize.content.html_safe %>
</p>


