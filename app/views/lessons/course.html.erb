<script type="text/javascript" charset="utf-8">
var course = '<%= @course %>';
if ( course == '语文' )
	$('.chinese').addClass('active');
else if ( course == '数学' ) 
	$('.math').addClass('active');
else if ( course == '英语' ) 
	$('.english').addClass('active');
</script>

<h2><%= @course %></h2>
<table class="table table-striped">
  <thead>
	<tr>
    <th style="width: 40%;">名 称</th>
    <th style="width: 10%;">作 者</th>
    <th style="width: 10%;">年 级</th>
		<th style="width: 20%;">创建时间</th>
  </tr>
	</thead>
	<tbody>
<% @lessons.each do |lesson| %>
  <tr>
    <td><%= link_to lesson.title, show_lesson_path(lesson) %></td>
		<td><%= lesson.user.username %></td>
		<td><%= lesson.grade %></td>
		<td><%= lesson.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
  </tr>
<% end %>
	</tbody>
</table>
<%= will_paginate @awards, class: 'apple_pagination' %>