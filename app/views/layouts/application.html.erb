<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="utf-8">
  <meta name="description" content="西溪小学备课系统">
  <meta name="author" content="lcl">
  <title>西溪小学备课系统</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
	<%= javascript_include_tag "application" %>
	<!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
  <%= include_kindeditor_if_needed %>
  <%= csrf_meta_tags %>
	<style type="text/css" media="screen">
		.navbar-inner {
		  background-color: #447bd4;
		  background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#3f92d2), color-stop(90%, #3f92d2), to(#3f92d2));
		  background-image: -webkit-linear-gradient(#3f92d2, #3f92d2 90%, #3f92d2);
		  background-image: -moz-linear-gradient(top, #3f92d2, #3f92d2 90%, #3f92d2);
		  background-image: -ms-linear-gradient(#3f92d2, #3f92d2 90%, #3f92d2);
		  background-image: -o-linear-gradient(#3f92d2, #3f92d2 90%, #3f92d2);
		  background-image: linear-gradient(#3f92d2, #3f92d2 90%, #3f92d2);
		  background-repeat: no-repeat;
		  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#3f92d2', endColorstr='#3f92d2', GradientType=0);
		}
		body { padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */ }
	</style>
</head>
<body>
	<div class="navbar navbar-fixed-top">
	  <div class="navbar-inner">
	    <div class="container">
	      <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
	      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </a>

	      <!-- Be sure to leave the brand out there if you want it shown -->
	      <%= link_to "西溪小学备课系统", root_path, :class => "brand" %>

	      <!-- Everything you want hidden at 940px or less, place within here -->
	      <div class="nav-collapse">
	        <!-- .nav, .navbar-search, .navbar-form, etc -->
					<ul class="nav">
					  <li class="homepage"><%= link_to '<i class="icon-home icon-white"></i>'.html_safe + "主页", root_path %></li>
						<li class="chinese"><%= link_to '<i class="icon-book icon-white"></i>'.html_safe + Lesson::COURSES[0], course_path(0) %></li>
						<li class="math"><%= link_to '<i class="icon-book icon-white"></i>'.html_safe + Lesson::COURSES[1], course_path(1) %></li>
						<li class="english"><%= link_to '<i class="icon-book icon-white"></i>'.html_safe + Lesson::COURSES[2], course_path(2) %></li>
						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-th-list icon-white"></i>综 合<b class="caret"></b></a>
								<ul class="dropdown-menu">
						    	<li><%= link_to '<i class="icon-book"></i>'.html_safe + Lesson::COURSES[3], course_path(3) %></li>
									<li><%= link_to '<i class="icon-book"></i>'.html_safe + Lesson::COURSES[4], course_path(4) %></li>
									<li><%= link_to '<i class="icon-book"></i>'.html_safe + Lesson::COURSES[5], course_path(5) %></li>
									<li><%= link_to '<i class="icon-book"></i>'.html_safe + Lesson::COURSES[6], course_path(6) %></li>
									<li><%= link_to '<i class="icon-book"></i>'.html_safe + Lesson::COURSES[7], course_path(7) %></li>
									<li><%= link_to '<i class="icon-book"></i>'.html_safe + Lesson::COURSES[8], course_path(8) %></li>
						    </ul>
						</li>
					  <!--li class="divider-vertical"></li-->
					</ul>
					<form class="navbar-search pull-left" accept-charset="UTF-8" action="/search_lesson" method="post">
					  <i class="icon-search icon-white"></i><input type="text" class="search-query" value="输入搜索内容按回车" name="search_str">
					</form>
					
					<ul class="nav pull-right">
						<% if logged_in? %>
							<li class="myhome"><%= link_to '<i class="icon-user icon-white"></i>'.html_safe + current_user.username + '的备课', myhome_path(current_user) %></li>
							<!--li class="divider-vertical"></li-->
						<% end %>
					  <% if logged_in? %>
							<li><%= link_to '<i class="icon-off icon-white"></i>'.html_safe + "注 销", logout_path %></li>
						<% else %>
							<li class="login"><%= link_to '<i class="icon-flag icon-white"></i>'.html_safe + "登 陆", login_path %></li>
						  <li class="signup"><%= link_to '<i class="icon-plus icon-white"></i>'.html_safe + "注 册", signup_path %></li>
						<% end %>
					</ul>
					
	      </div>
	    </div>
	  </div>
	</div>

	<div class="container">
		<!--ul class="breadcrumb"--><%#= yield :breadcrumb %><!--/ul-->
		
		<div class="row">
		  <div class="span12">
				<% if notice %>
			   	<div class="alert alert-success fade in"><a class="close" data-dismiss="alert" href="#">&times;</a><%= notice %></div>
				<% end %>
				<% if alert %>
					<div class="alert alert-error fade in"><a class="close" data-dismiss="alert" href="#">&times;</a><%= alert %></div>
				<% end %>
			  <%= yield %>
			</div>
		</div>
		<footer class="footer"><p>Copyright <%= Time.now.year %> 东莞市寮步镇西溪小学 | Developed by lcl</p></footer>
	</div> <!-- /container -->
</body>
</html>
