<!DOCTYPE html>
<html>
<head>
  <title>西溪小学备课系统</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= include_kindeditor_if_needed %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar">
	  <div class="navbar-inner">
	    <div class="container">
	      
	      <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
	      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </a>

	      <!-- Be sure to leave the brand out there if you want it shown -->
	      <%= link_to "西溪小学备课系统", root_path, :class => "brand" %>

	      <!-- Everything you want hidden at 940px or less, place within here -->
	      <div class="nav-collapse">
	        <!-- .nav, .navbar-search, .navbar-form, etc -->
					<!--form class="navbar-search pull-left">
					  <input type="text" class="search-query" placeholder="Search">
					</form-->
					<ul class="nav">
					  <li class="active"><%= link_to "主 页", root_path %></li>
						<li><%= link_to Lesson::COURSES[0], course_path(0) %></li>
						<li><%= link_to Lesson::COURSES[1], course_path(1) %></li>
						<li><%= link_to Lesson::COURSES[2], course_path(2) %></li>
						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown">综 合<b class="caret"></b></a>
								<ul class="dropdown-menu">
						    	<li><%= link_to Lesson::COURSES[3], course_path(3) %></li>
									<li><%= link_to Lesson::COURSES[4], course_path(4) %></li>
									<li><%= link_to Lesson::COURSES[5], course_path(5) %></li>
									<li><%= link_to Lesson::COURSES[6], course_path(6) %></li>
									<li><%= link_to Lesson::COURSES[7], course_path(7) %></li>
									<li><%= link_to Lesson::COURSES[8], course_path(8) %></li>
						    </ul>
						</li>
					  <!--li class="divider-vertical"></li-->
					</ul>
					<ul class="nav pull-right">
						<% if logged_in? %>
							<li><%= link_to '<i class="icon-user icon-white"></i>'.html_safe + current_user.username, myhome_path(current_user) %></li>
							<li class="divider-vertical"></li>
						<% end %>
					  <% if logged_in? %>
							<li><%= link_to '<i class="icon-off icon-white"></i>'.html_safe + "注 销", logout_path %></li>
						<% else %>
						  <li><%= link_to "注 册", signup_path %></li>
						  <li><%= link_to "登 陆", login_path %></li>
						<% end %>
					</ul>
					
	      </div>
	    </div>
	  </div>
	</div>

	<div class="container">
		<ul class="breadcrumb"><%= yield :breadcrumb %></ul>
		
		<div class="row">
		  <div class="span12">
				<% if notice %>
			   	<div class="alert alert-success fade in"><a class="close" data-dismiss="alert" href="#">&times;</a><%= notice %></div>
				<% end %>
				<% if alert %>
					<div class="alert alert-error fade in"><a class="close" data-dismiss="alert" href="#">&times;</a><%= alert %></div>
				<% end %>
			  <%= yield %>
			</div>
		</div>
		<footer class="footer"><p>Copyright <%= Time.now.year %> 东莞市寮步镇西溪小学 | Developed by lcl</p></footer>
	</div> <!-- /container -->
	
	<%= javascript_include_tag "application" %>
	<!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
</body>
</html>
