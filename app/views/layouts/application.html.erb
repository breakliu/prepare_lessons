<!DOCTYPE html>
<html>
<head>
  <title>西溪小学备课系统</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar">
	  <div class="navbar-inner">
	    <div class="container">
	      
	      <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
	      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </a>

	      <!-- Be sure to leave the brand out there if you want it shown -->
	      <%= link_to "西溪小学备课系统", root_path, :class => "brand" %>

	      <!-- Everything you want hidden at 940px or less, place within here -->
	      <div class="nav-collapse">
	        <!-- .nav, .navbar-search, .navbar-form, etc -->
					<!--form class="navbar-search pull-left">
					  <input type="text" class="search-query" placeholder="Search">
					</form-->
					<ul class="nav">
					  <li class="active"><%= link_to "主页", root_path %></li>
					  <!--li class="divider-vertical"></li-->
					</ul>
	      </div>
	    </div>
	  </div>
	</div>

	<div class="container">
		<ul class="breadcrumb"><%= yield :breadcrumb %></ul>
		<div class="row">
		  <div class="span12">
				<% if notice %>
			   	<div class="alert alert-success fade in"><a class="close" data-dismiss="alert" href="#">&times;</a><%= notice %></div>
				<% end %>
				<% if alert %>
					<div class="alert alert-error fade in"><a class="close" data-dismiss="alert" href="#">&times;</a><%= alert %></div>
				<% end %>
			  <%= yield %>
			</div>
		</div>
		<footer class="footer"><p>Copyright <%= Time.now.year %> 东莞市寮步镇西溪小学 | Developed by lcl</p></footer>
	</div> <!-- /container -->
	
	<%= javascript_include_tag "application" %>
	<!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
	<%= include_kindeditor_if_needed %>
</body>
</html>
